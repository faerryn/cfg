# terminal emulator
super + shift + Return
	st

# program launcher
super + d
	dmenu_run

# volume control
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

shift + XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {100,0}%

# brightness control
XF86MonBrightness{Up,Down}
	xbacklight {+,-}5

shift + XF86MonBrightness{Up,Down}
	xbacklight {100,0}

# quit/restart bspwm
super + shift + q
	bspc quit

# close and kill
super + shift + c
	bspc node -c

# switch to the monocle layout
super + m
	bspc desktop -l monocle

# switch to the tiled layout
super + t
	bspc desktop -l tiled

# focus the node in the given direction
super + {_,shift + }{h,j,k,l,n,p}
	bspc node -{f,s} {west,south,north,east,next,prev}

# focus the node in the given desktop
super + {_,shift +}{1-4}
	bspc {desktop -f,node -d} {1-4}
