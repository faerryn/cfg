# terminal emulator
super + shift + Return
	st

# program launcher
super + p
	rofi -show run

# window switcher
super + w
	rofi -show window

# volume control
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

shift + XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {100,0}%

# brightness control
XF86MonBrightness{Up,Down}
	xbacklight {+,-}5

shift + XF86MonBrightness{Up,Down}
	xbacklight {100,0}

# quit/restart bspwm
super + shift + q
	bspc quit

# close and kill
super + shift + c
	bspc node -c

# fullscreen node
super + shift + {space,t,f}
	bspc node -t {floating,tiled,~fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l,n,p}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {a,s,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the node in the given desktop
super + {_,shift +}{1-4}
	bspc {desktop -f,node -d} {1-4}
