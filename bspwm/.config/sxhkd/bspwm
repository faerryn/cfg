# terminal emulator
super + shift + Return
	COLORTERM=truecolor st -f 'monospace:size=12'

# program launcher
super + p
	dmenu_run -fn 'monospace:12' -l 16 -i

# quit bspwm
super + shift + q
	bspc quit

# close and kill
super + shift + c
	bspc node -c

# fullscreen node
super + shift + {space,t,f}
	bspc node -t ~{floating,tiled,fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {a,s,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the node in the given desktop
super + {_,shift +}{1-4}
	bspc {desktop -f,node -d} {1-4}
